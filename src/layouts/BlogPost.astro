//   author,
//   authorlink,
//   unsplashlink,
//   tags
// } = Astro.props;

type Props = {
  post: CollectionEntry<"blog">["data"];
}

const { post } = Astro.props;

const base = import.meta.env.BASE_URL;
const site = import.meta.env.SITE;
const ogImage = site + base + post.banner;
---

<html lang="en">
  <head>
    <BaseHead title={post.title} description={post.description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:title" content={post.title} />
    <meta property="og:description" content={post.description} />
  </head>
    <Header />
    <main class="w-[calc(100%-2em)] max-w-full m-0">
      <article>
        <div class="relative w-full max-w-4xl mx-auto">
          <img src={ base + post.banner } class="w-full h-auto object-cover">
          <div class="absolute bottom-0 right-0 bg-slate-900 bg-opacity-50 w-full rounded-b-lg">
            <p class="text-white text-sm py-2 px-4 text-right mb-0">Â© <a href={post.unsplashlink} class="no-underline text-white hover:text-white">{post.author}</a> via <a class="no-underline text-white hover:text-white" href={post.authorlink}>Unsplash</a></p>
          </div>
        </div>
        <div class="w-[900px] max-w-[calc(100%-2em)] mx-auto p-4 text-gray-800">
          <div class="mb-4 py-4 text-center leading-none">
            <h1 class="-mb-0.5">{post.title}</h1>
            <hr />
          </div>
          <!-- <TagsList tags={tags} context="post" /> -->
          <slot />
              <section>
            <CallToAction />
              <>
                <section>
                  <RelatedArticles tags={post.tags} title={post.title} />
                </section>
              </>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
