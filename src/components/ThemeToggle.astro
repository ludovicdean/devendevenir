<button
    type="button"
    class="theme-toggle-btn"
    aria-label="Toggle theme"
    title="Toggle dark/light mode"
>
    <svg
        class="sun-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
    >
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
        <line x1="1" y1="12" x2="3" y2="12"></line>
        <line x1="21" y1="12" x2="23" y2="12"></line>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
    </svg>
    <svg
        class="moon-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
    >
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
    </svg>
</button>

<style>
    .theme-toggle-btn {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        padding: 0;
        background-color: transparent;
        border-radius: 50%;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .theme-toggle-btn:hover {
        transform: scale(1.1) rotate(10deg);
    }

    .theme-toggle-btn:active {
        transform: scale(0.95);
    }

    .sun-icon,
    .moon-icon {
        position: absolute;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        color: #fbbf24;
    }

    .sun-icon {
        opacity: 1;
        transform: rotate(0deg) scale(1);
    }

    .moon-icon {
        opacity: 0;
        transform: rotate(180deg) scale(0);
    }

    :global(html.dark) .sun-icon {
        opacity: 0;
        transform: rotate(-180deg) scale(0);
    }

    :global(html.dark) .moon-icon {
        opacity: 1;
        transform: rotate(0deg) scale(1);
        color: #fbbf24;
    }

    @media (max-width: 768px) {
        .theme-toggle-btn {
            width: 40px;
            height: 40px;
        }

        .sun-icon,
        .moon-icon {
            width: 18px;
            height: 18px;
        }
    }

    @keyframes themeSwitch {
        0% {
            transform: scale(1) rotate(0deg);
        }
        50% {
            transform: scale(1.2) rotate(180deg);
        }
        100% {
            transform: scale(1) rotate(360deg);
        }
    }

    .theme-toggle-btn.switching {
        animation: themeSwitch 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    @media (prefers-reduced-motion: reduce) {
        .theme-toggle-btn,
        .sun-icon,
        .moon-icon {
            transition: none;
        }

        .theme-toggle-btn.switching {
            animation: none;
        }

        .theme-toggle-btn:hover {
            transform: none;
        }
    }
</style>

<script>
    const themeToggles = document.querySelectorAll(".theme-toggle-btn");
    const htmlElement = document.documentElement;

    const getTheme = () => {
        if (
            typeof localStorage !== "undefined" &&
            localStorage.getItem("theme")
        ) {
            return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
            return "dark";
        }
        return "light";
    };

    const theme = getTheme();
    if (theme === "dark") {
        htmlElement.classList.add("dark");
    } else {
        htmlElement.classList.remove("dark");
    }

    themeToggles.forEach((btn) => {
        btn.addEventListener("click", () => {
            const isDark = htmlElement.classList.contains("dark");
            themeToggles.forEach((t) => t.classList.add("switching"));

            if (isDark) {
                htmlElement.classList.remove("dark");
                localStorage.setItem("theme", "light");
            } else {
                htmlElement.classList.add("dark");
                localStorage.setItem("theme", "dark");
            }

            setTimeout(() => {
                themeToggles.forEach((t) => t.classList.remove("switching"));
            }, 600);
        });
    });

    window
        .matchMedia("(prefers-color-scheme: dark)")
        .addEventListener("change", (e) => {
            if (!localStorage.getItem("theme")) {
                if (e.matches) {
                    htmlElement.classList.add("dark");
                } else {
                    htmlElement.classList.remove("dark");
                }
            }
        });
</script>
