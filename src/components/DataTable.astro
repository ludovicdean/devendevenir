---
import type { DataTable } from "src/interfaces/DataTable";

interface Props {
    data: DataTable;
}

const { data } = Astro.props;
---

<div
    class="overflow-x-auto my-10 rounded-xl border-2 border-black dark:border-zinc-200 overflow-hidden"
>
    <table class="min-w-full bg-white dark:bg-transparent">
        <thead class="bg-yellow-300">
            <tr>
                {
                    data.headers.map((header) => (
                        <th class="px-1 sm:px-4 lg:px-6 py-2 sm:py-3 lg:py-4 text-left font-medium text-black tracking-wider border-2 border-black dark:border-zinc-200 text-sm sm:text-base lg:text-xl">
                            {header}
                        </th>
                    ))
                }
            </tr>
        </thead>
        <tbody>
            {
                data.rows.map((row, rowIndex) => (
                    <tr
                        class={`border-2 border-black dark:border-zinc-200 ${rowIndex % 2 !== 0 ? "bg-yellow-300 text-black" : "text-gray-500 dark:text-white"}`}
                    >
                        {row.map((cell) => (
                            <td class="px-1 sm:px-4 lg:px-6 py-2 sm:py-3 lg:py-4 border-solid border-2 border-black dark:border-zinc-200 text-md text-xs sm:text-sm lg:text-md">
                                {typeof cell === "string"
                                    ? cell
                                          .split(",")
                                          .map((item) => (
                                              <p class="m-0 p-0">
                                                  {item.trim()}
                                              </p>
                                          ))
                                    : cell}
                            </td>
                        ))}
                    </tr>
                ))
            }
        </tbody>
    </table>
</div>
